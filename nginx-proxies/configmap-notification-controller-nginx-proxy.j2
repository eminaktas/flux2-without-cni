apiVersion: v1
kind: ConfigMap
metadata:
    name: notification-controller-nginx-proxy
    namespace: flux-system
    labels:
      app.kubernetes.io/instance: flux-system
      app.kubernetes.io/part-of: flux
      app: notification-controller-nginx
data:
    nginx.conf: |
        error_log stderr notice;

        worker_processes 2;
        worker_rlimit_nofile 130048;
        worker_shutdown_timeout 10s;

        events {
        multi_accept on;
        use epoll;
        worker_connections 16384;
        }

        stream {
        upstream notification_controller {
            {% for k8s_master_ip in k8s_master_ips -%}
            server {{ k8s_master_ip }}:22581;
            {% endfor -%}
            least_conn;
            }

        server {
            listen        127.0.0.1:22585;
            proxy_pass    notification_controller;
            proxy_timeout 10m;
            proxy_connect_timeout 1s;
        }
        }

        http {
        aio threads;
        aio_write on;
        tcp_nopush on;
        tcp_nodelay on;

        keepalive_timeout 5m;
        keepalive_requests 100;
        reset_timedout_connection on;
        server_tokens off;
        autoindex off;

        server {
            listen 22586;
            location /healthz {
            access_log off;
            return 200;
            }
            location /stub_status {
            stub_status on;
            access_log off;
            }
        }
        }
